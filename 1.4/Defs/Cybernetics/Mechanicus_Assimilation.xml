<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--=== Mechanicus Assimilation ===-->
    <!-- ThingDef -->
    <ThingDef ParentName="BodyPartBionicBase">
        <defName>BEWH_MechanicusAssimilation</defName>
        <label>mechanicus assimilation</label>
        <description>Used to rebuild the users body with interlaced bionic replacements, augmenting and suporting the biological system.</description>
        <descriptionHyperlinks>
            <RecipeDef>BEWH_MechanicusAssimilation</RecipeDef>
        </descriptionHyperlinks>
        <costList>
            <Steel>1</Steel>
        </costList>
        <statBases>
            <Mass>0.3</Mass>
        </statBases>
    </ThingDef>
    <!-- RecipeDef -->
    <RecipeDef ParentName="SurgeryInstallImplantBase">
        <defName>BEWH_MechanicusAssimilation</defName>
        <label>install mechanicus assimilation</label>
        <description>Install machanicus assimilation.</description>
        <descriptionHyperlinks>
            <ThingDef>BEWH_MechanicusAssimilation</ThingDef>
            <HediffDef>BEWH_MechanicusAssimilation</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing mechanicus assimilation.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>BEWH_MechanicusAssimilation</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>BEWH_MechanicusAssimilation</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Torso</li>
        </appliedOnFixedBodyParts>
        <addsHediff>BEWH_MechanicusAssimilation</addsHediff>
    </RecipeDef>
    <!-- HediffDef -->
    <HediffDef ParentName="ImplantHediffBase">
        <defName>BEWH_MechanicusAssimilation</defName>
        <label>mechanicus assimilation</label>
        <labelNoun>mechanicus assimilation</labelNoun>
        <description>Installed mechanicus assimilation.</description>
        <woundAnchorRange>0</woundAnchorRange>
        <displayWound>true</displayWound>
        <stages>
            <li>
                <statOffsets>
                    <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
                    <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
                    <ArmorRating_Heat>0.3</ArmorRating_Heat>
                </statOffsets>
                <statFactors>
                    <IncomingDamageFactor>0.9</IncomingDamageFactor>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_ReactOnDamage">
                <damageDefIncoming>EMP</damageDefIncoming>
                <createHediff>BrainShock</createHediff>
            </li>
        </comps>
    </HediffDef>

</Defs>